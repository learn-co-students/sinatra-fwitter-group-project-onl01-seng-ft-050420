<% if is_logged_in? %>
<%= @error %>
  <form action='/tweets/<%= @tweet.id %>' method="post" >
    Content:
    <input type="text" name="content" value="<%= @tweet.content %>"><br>
    Update Your Tweet:
    <input type="hidden" name="_method" value="PATCH" id="hidden">
    <input type="submit" name="submit" id="submit">

  </form>

  <% else %>
      <h1> You Must Be Logged in to Update Tweets </h1>
  <% end %>
